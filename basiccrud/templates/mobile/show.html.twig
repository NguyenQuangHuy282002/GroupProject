{% extends 'base.html.twig' %}

{% block title %}Mobile{% endblock %}

{% block body %}
    <h1>Mobile Detail</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mobile.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ mobile.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ mobile.price }} $</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    <img src="{{ mobile.image }}" width="100" height="100">
                </td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ mobile.color }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('mobile_index') }}">back to list</a>

    <a href="{{ path('mobile_edit', {'id': mobile.id}) }}">edit</a>

    {{ include('mobile/_delete_form.html.twig') }}
{% endblock %}
