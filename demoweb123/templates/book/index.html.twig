{% extends "base.html.twig" %}

{% block body %}
<div class="container col-md-6 mt-5 text-center">
<h1 class="text text-primary">Book List</h1>
<table class="table table-primary">
    <thead>
        <tr>
            <th>Book Id</th>
            <th>Book Title</th>
            <th>Book Cover</th>
            <th>Menu</th>
        </tr>
    </thead>
    <tbody>
    {% for book in books %}
        <tr>
            <td>{{ book.id }}</td>
            <td>{{ book.title }}</td>
            <td>
                <img src="{{ book.image }}" width="100" height="100">  
            </td>
            <td></td>
        </tr>
    {% endfor %}  
    </tbody>
</table>
</div>
{% endblock %}