{% extends 'base.html.twig' %}

{% block title %}Mobile index{% endblock %}

{% block body %}
    <h1>Mobile index</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Date</th>
                <th>Color</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mobile in mobiles %}
            <tr>
                <td>{{ mobile.id }}</td>
                <td>{{ mobile.name }}</td>
                <td>{{ mobile.price }} $</td>
                <td>{{ mobile.date ? mobile.date|date('d/m/Y') : '' }}</td>
                <td>{{ mobile.color }}</td>
                <td>
                    <a href="{{ path('mobile_show', {'id': mobile.id}) }}">show</a>
                    <a href="{{ path('mobile_edit', {'id': mobile.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('mobile_new') }}">Create new</a>
{% endblock %}
