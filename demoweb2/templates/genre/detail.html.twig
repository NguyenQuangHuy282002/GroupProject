{% extends 'base.html.twig' %}

{% block body %}
<div class="container col-md-8 text-center">
    <table class="table table-striped">
        <tr>
            <th>Genre Name</th>
            <th>Movie List</th>
            <th>Actions</th>
        </tr>
            <tr>
                <td>
                     {{ genre.name }}
                </td>
                <td>
                  {% for movie in genre.movies %}
                    <a href="{{ path('movie_detail', {'id' : movie.id })}}">
                        {{ movie.name }}
                    </a>
                     <br>
                  {% endfor %}     
                </td>
                <td>
                    <a class="btn btn-warning" href="{{ path('genre_edit',{'id' : genre.id })}}">
                        EDIT
                    </a>
                    <a class="btn btn-danger" href="{{ path('genre_delete',{'id' : genre.id })}}"
                        onclick=return confirm('Are you sure to delete this genre ?')
                    >
                        DELETE
                    </a>
                </td>
            </tr>
    </table>
</div>
{% endblock %}
