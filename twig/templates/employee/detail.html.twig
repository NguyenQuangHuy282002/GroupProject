{% extends "layout.html.twig" %}

{% block title %} Employee Detail {% endblock %}

{% block body %}
   <div class="container col-md-8 mt-5">
      <div class="row">
         <div class="col">
            <img src="{{ employee.image }}" width="250" height="250">
         </div>
         <div class="col">
            <h3 class="text-warning"> {{ employee.name }} </h3>
            <h5> Birthday : {{ employee.dob | date('d/m/Y') }} </h5>
            <h5> Address : {{ employee.address }} </h5>
            <h5> Salary : {{ employee.salary }} $ </h5>
         </div>
      </div>
   </div>
{% endblock %}