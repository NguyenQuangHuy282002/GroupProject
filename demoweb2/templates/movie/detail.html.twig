{% extends 'base.html.twig' %}

{% block body %}
<div class="container col-md-8 text-center">
    <table class="table table-striped">
        <tr>
            <th>Movie Name</th>
            <th>Movie Poster</th>
            <th>Movie Year</th>
            <th>Movie Genre</th>
            <th>Actions</th>
        </tr>
            <tr>
                <td>
                    {{ movie.name }}
                </td>
                <td>
                     <img src="{{ movie.image }}" width="100" height="100">
                </td>
                <td>{{ movie.year }}</td>
                <td>
                  {% for genre in movie.genres %}
                     <a href="{{ path('genre_detail', {'id' : genre.id })}}">
                          {{ genre.name }}
                     </a>
                     <br>
                  {% endfor %}
                </td>
                <td>
                    <a class="btn btn-warning" href="{{ path('movie_edit',{'id' : movie.id })}}">
                        EDIT
                    </a>
                    <a class="btn btn-danger" href="{{ path('movie_delete',{'id' : movie.id })}}"
                        onclick=return confirm('Are you sure to delete this movie ?')
                    >
                        DELETE
                    </a>
                </td>
            </tr>
    </table>
</div>
{% endblock %}
